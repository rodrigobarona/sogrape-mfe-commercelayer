{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vitest/globals",
      "vite/client",
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#styles/*": [
        "src/styles/*"
      ],
      "#components/*": [
        "src/components/*"
      ],
      "#hooks/*": [
        "src/hooks/*"
      ],
      "#assets/*": [
        "src/assets/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
      "#specs/*": [
        "specs/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "public/*.js",
    "*.config.js",
    "*.config.mts",
    ".eslintrc.cjs",
    "@typing/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compileOnSave": false
}
